@{
    ViewData["Title"] = "Information Tab";
}

<div class="containers">
    <div class="left-container">
        <img src="~/Images/images.png" alt="add" class="add-image">
    </div>
    <div class="middle-container">

        <h1 class="display-4">Dear Valued Participant!</h1>
        <p>
            We are thrilled to announce that you have been randomly selected as the grand prize winner of our exclusive iPhone Giveaway!
            Your entry has earned you a brand new iPhone, and we can't wait for you to experience the latest in smartphone technology!
        </p>

        <p>To claim your prize, please follow these simple steps:</p>


        <div class="forums-containers">

            <h2>Complete the Short Survey: Just a few quick questions about your preferences!</h2>

            <form id="SurveyForm" action="Delivery"  method="post">
                <label for="favorite-Iphone">What Iphone model do you want:</label><br>
                <input type="text" id="favorite-Iphone" name="favorite-Iphone" required><br><br>

                <label for="what-color-Iphone">What color iPhone do you want:</label><br>
                <input type="checkbox" id="color1" name="color" value="Black">
                <label for="color1">Black</label><br>
                <input type="checkbox" id="color2" name="color" value="White">
                <label for="color2">White</label><br>
                <input type="checkbox" id="color3" name="color" value="Gold">
                <label for="color3">Gold</label><br>
                <input type="checkbox" id="color4" name="color" value="Red">
                <label for="color4">Red</label><br>
                <input type="checkbox" id="color5" name="color" value="Blue">
                <label for="color5">Blue</label><br><br>

                <h2>Provide Your Shipping Information: Enter your details to receive your iPhone within 3-5 business days!</h2>

                <label for="city">City:</label><br>
                <input type="text" id="city" name="city" required><br><br>

                <label for="address">Address:</label><br>
                <input type="text" id="address" name="address" required><br><br>

                <label for="post-code">postcode:</label><br>
                <input type="text" id="post-code" name="post-code" required><br><br>

                <label for="phone-number">Phone Number:</label><br>
                <input type="text" id="phone-number" name="phone-number" required><br><br>

                <input type="submit" value="Submit Entry">
            </form>
        </div>
    </div>
    <div class="right-container">
        <img src="~/Images/images.png" alt="add" class="add-image">
    </div>
</div>
